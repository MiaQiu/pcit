# ==============================================================================
# BACKEND API KEYS (Server-side only, NEVER exposed to frontend)
# ==============================================================================

# ElevenLabs API Key (primary transcription service - best for similar voices)
# Get your API key from https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Deepgram API Key (fallback transcription service)
# Get your API key from https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AssemblyAI API Key (fallback transcription service)
# Get your API key from https://www.assemblyai.com/dashboard/
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Anthropic Claude API Key (for PCIT analysis - used by backend server)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==============================================================================
# DATABASE & ENCRYPTION
# ==============================================================================

# PostgreSQL Database URL
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_ACCESS_SECRET=your_64_byte_hex_secret_here
JWT_REFRESH_SECRET=your_64_byte_hex_secret_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Application-Level Encryption Key (32 bytes = 64 hex chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_32_byte_hex_key_here

# ==============================================================================
# GOOGLE CLOUD STORAGE (for audio files)
# ==============================================================================

GCP_PROJECT_ID=your_gcp_project_id
GCP_KEY_FILE=./gcp-service-account.json
GCS_BUCKET_NAME=your_bucket_name

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================

# Backend API URL (where frontend connects)
VITE_API_URL=http://localhost:3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ==============================================================================
# EXPO MOBILE APP CONFIGURATION
# These are duplicated from nora-mobile/.env for EAS Build compatibility
# IMPORTANT: Keep these in sync with nora-mobile/.env
# ==============================================================================

# Backend API URL for mobile app
EXPO_PUBLIC_API_URL=http://localhost:3001

# Web URL
EXPO_PUBLIC_WEB_URL=http://localhost:5173

# Expo Project ID (for push notifications)
# Get this from: https://expo.dev → Your Project → Settings → Project ID
EXPO_PUBLIC_PROJECT_ID=your_expo_project_id_here

# Google OAuth Configuration
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_ios_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_android_client_id.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_web_client_id.apps.googleusercontent.com

# Facebook OAuth Configuration
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id

# ==============================================================================
# EMAIL CONFIGURATION (for coach alerts)
# ==============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
COACH_EMAIL=coach@example.com

# ==============================================================================
# REVENUECAT (subscription management)
# ==============================================================================

# RevenueCat Webhook Secret (from RevenueCat dashboard → Integrations → Webhooks)
# This is the Authorization Header value shown when you create a webhook
REVENUECAT_WEBHOOK_SECRET=your_revenuecat_webhook_secret_here
