# Nora Mobile Environment Variables
# Copy this file to .env and update with your configuration

# Backend API URL
# For local development, use your machine's IP address (not localhost)
# Example: http://192.168.1.100:3000/api
EXPO_PUBLIC_API_URL=http://localhost:3000/api

# Web URL for lesson sharing
# This is the base URL where your share-lesson.html page is hosted
# For local development: http://localhost:3001
# For production: https://your-domain.com
EXPO_PUBLIC_WEB_URL=http://localhost:3001
